<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardView.Default">
        <item name="cardCornerRadius">16dp</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="hintTextColor">@color/white</item>
        <item name="counterEnabled">true</item>
        <item name="hintEnabled">true</item>
    </style>

    <style name="DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingVertical">16dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">4dp</item>
    </style>
</resources>