<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="counterEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="DefaultCard" parent="CardView">
        <item name="cardBackgroundColor">@color/primaryColor</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="DefaultEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:inputType">number</item>
        <item name="drawableTint">@color/primaryColor</item>
    </style>

    <style name="DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingVertical">16dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="HeaderOneText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="HeaderTwoText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">#000000</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>